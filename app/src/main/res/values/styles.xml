<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="@android:style/Theme.Holo.NoActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="backgroundColor">@color/backgroundColorLight</item>
        <item name="backgroundColorDark">@color/backgroundColorLightSecond</item>
        <item name="textColor">@color/text_color</item>
        <item name="colorPrimary">@color/accent_color</item>
        <item name="textColorDark">@color/text_highlight</item>
        <item name="colorPrimaryDark">@color/accent_color_dark</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:background">@drawable/background_shape</item>
        <item name="android:backgroundTint">?colorPrimary</item>
        <item name="android:padding">10dp</item>
    </style>

