<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="?backgroundColor">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/background_shape"
            android:padding="5dp"
            android:backgroundTint="?backgroundColor"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Всего тренировок"
                android:textColor="?textColor"
                android:textSize="@dimen/ldpi_textSecondarySize"/>

            <TextView
                android:id="@+id/statistic_total_workouts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\?"
                android:textColor="?colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/ldpi_textSecondarySize"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shape"
            android:padding="5dp"
            android:backgroundTint="?backgroundColor"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Общее время занятий"
                android:textColor="?textColor"
                android:textSize="@dimen/ldpi_textSecondarySize"/>

            <TextView
                android:id="@+id/statistic_total_workouts_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\?"
                android:textColor="?colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/ldpi_textSecondarySize"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shape"
            android:padding="5dp"
            android:backgroundTint="?backgroundColor"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Пройдено киллометров"
                android:textColor="?textColor"
                android:textSize="@dimen/ldpi_textSecondarySize"/>

            <TextView
                android:id="@+id/statistic_total_distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\?"
                android:textColor="?colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/ldpi_textSecondarySize"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/background_shape"
            android:padding="5dp"
            android:backgroundTint="?backgroundColor"
            android:elevation="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сожженно калорий"
                android:textColor="?textColor"
                android:textSize="@dimen/ldpi_textSecondarySize"/>

            <TextView
                android:id="@+id/statistic_total_calories"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="\?"
                android:textColor="?colorPrimary"
                android:textStyle="bold"
                android:textSize="@dimen/ldpi_textSecondarySize"
                android:layout_marginStart="5dp"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>