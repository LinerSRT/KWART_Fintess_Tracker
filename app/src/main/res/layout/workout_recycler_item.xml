<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="10dp"
    android:layout_marginTop="20dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_shape_up"
        android:backgroundTint="?colorPrimary"
        android:padding="10sp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="Тип:"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/workout_recycler_stringTypeWorkout"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:text="Велопоездка"
            android:textColor="#fff" />

        <TextView
            android:id="@+id/workout_recycler_date"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_marginStart="30dp"
            android:text="12:55 \n12.12.2025"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/workout_recycler_deleteBtn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/detele_icon"
            android:layout_marginStart="20dp"
            android:tint="#fff"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?backgroundColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/distance_icon"
            android:tint="?colorPrimary"/>

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Пройденное растояние"/>

        <TextView
            android:id="@+id/workout_recycler_distance"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:text="2"
            android:background="?backgroundColor"/>

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="км"
            android:background="?backgroundColor"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?backgroundColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/steps_icon"
            android:tint="?colorPrimary"/>

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Совершено шагов"/>

        <TextView
            android:id="@+id/workout_recycler_steps"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:text="13213"
            android:background="?backgroundColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?backgroundColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calories"
            android:tint="?colorPrimary"/>

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Сожжено калорий"/>

        <TextView
            android:id="@+id/workout_recycler_calories"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:text="113"
            android:background="?backgroundColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="?backgroundColor"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/heart_icon"
            android:tint="?colorPrimary"/>

        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Пульс (мин | макс)"/>
        <TextView
            android:id="@+id/workout_recycler_minPulse"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:text="73"
            android:background="?backgroundColor"/>
        <TextView
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:text="|"/>
        <TextView
            android:id="@+id/workout_recycler_maxPulse"
            style="@style/TextStyle"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginStart="10dp"
            android:textStyle="bold"
            android:textColor="?colorPrimary"
            android:text="113"
            android:background="?backgroundColor"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?backgroundColor"
        android:gravity="center">
        <Button
            android:id="@+id/workout_recycler_showMapBtn"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            style="@style/ButtonStyle"
            android:text="Посмотреть карту"
            android:visibility="gone"
            />
    </LinearLayout>
    <TextView
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="График скорости (сред.)"
        android:background="?backgroundColor"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/workout_recycler_noDataSpeedChart"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Данных нет"
        android:background="?backgroundColorDark"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/workout_recycler_averageSpeedChart"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_above="@+id/workout_recycler_seekbar"
        android:background="?backgroundColor"
        android:padding="10dp"/>


    <TextView
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="График пульса (сред.)"
        android:background="?backgroundColor"
        android:paddingTop="10dp"/>

    <TextView
        android:id="@+id/workout_recycler_noDataPulseChart"
        style="@style/TextStyle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Данных нет"
        android:background="?backgroundColorDark"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/workout_recycler_averageHeartRateChart"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_above="@+id/workout_recycler_seekbar"
        android:background="?backgroundColor"
        android:padding="10dp"/>

    
</LinearLayout>