<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?backgroundColor"
    android:gravity="center_horizontal">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Текущее время"
        android:gravity="center"
        android:textColor="?textColor"
        android:textSize="18sp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/workout_current_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="12:22"
        android:gravity="center"
        android:textColor="?textColor"
        android:textSize="30sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Продолжительность"
        android:gravity="center"
        android:textColor="?textColor"
        android:textSize="18sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp"
        android:background="?colorPrimary">
        <Chronometer
            android:id="@+id/workout_elapsed_time"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:textColor="#fff"
            android:textSize="35sp"/>
    </LinearLayout>



    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speed_icon"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Максимальная скорость (км\\ч)"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_max_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/speed_icon"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Средняя скорость (км\\ч)"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_avg_speed"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="360dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/distance_icon"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Пройденное расстояние (км)"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_distance"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>





    <LinearLayout
        android:layout_width="330dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/calories"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Сожженные калории"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_calories"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="269dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/steps_icon"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Совершено шагов"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_steps"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/worckout_heart"
            android:tint="?colorPrimary"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="Средний пульс"
            android:gravity="center"
            android:textColor="?textColor"
            android:textSize="18sp"
            android:layout_marginEnd="5dp"/>

        <TextView
            android:id="@+id/workout_heartrate"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="?colorPrimary"
            android:textStyle="bold"
            android:textSize="20sp"/>
    </LinearLayout>
</LinearLayout>